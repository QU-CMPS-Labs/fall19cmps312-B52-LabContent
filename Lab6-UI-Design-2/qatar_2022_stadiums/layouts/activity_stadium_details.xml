<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardMaxElevation="8dp"
    tools:layout_editor_absoluteX="4dp"
    tools:layout_editor_absoluteY="85dp">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:text="Host city"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/status_tv"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/stadium_name_tv" />

    <ImageView
        android:id="@+id/stadium_image"
        android:layout_width="0dp"
        android:layout_height="225dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="48dp"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        android:src="@drawable/al_khoor"
        app:layout_constraintBottom_toTopOf="@+id/stadium_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stadium_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="36dp"
        android:text="@string/al_gharafa_stadium"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stadium_image" />

    <TextView
        android:id="@+id/host_city_tv"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/status_tv"
        app:layout_constraintStart_toStartOf="@+id/status_tv" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="40dp"
        android:text="Construction status"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/status_tv"
        app:layout_constraintEnd_toStartOf="@+id/status_tv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/status_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="137dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</android.support.constraint.ConstraintLayout>


